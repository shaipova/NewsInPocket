<resources xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <!-- Base application theme. -->
    <style name="Theme.NewsInPocket" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#232323</item>
        <item name="colorPrimaryVariant">#373737</item>
        <item name="colorOnPrimary">#CACACA</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#AE8ED5</item>
        <item name="colorSecondaryVariant">#AE8ED5</item>
        <item name="colorOnSecondary">#191919</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

    </style>

    <style name="TextTitle" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:textSize">30sp</item>
        <item name="fontFamily">@font/titillium_web_black</item>
        <item name="android:textColor">#AE8ED5</item>
    </style>

    <style name="TextSubTitle" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:textColor">#AE8ED5</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/titillium_web_italic</item>
    </style>

    <style name="ArticleTitle" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#E1E1E1</item>
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/titillium_web_bold</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>


    <style name="ArticleDescription" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#E1E1E1</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/titillium_web_light</item>
        <item name="android:maxLines">3</item>
        <item name="android:ellipsize">end</item>
    </style>


    <style name="ArticleSource" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#E1E1E1</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/titillium_web_semibold_italic</item>
    </style>

    <style name="AddButton" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:tint">#AE8ED5</item>
    </style>

    <style name="ArticleCard" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="cardBackgroundColor">#232323</item>
    </style>

</resources>